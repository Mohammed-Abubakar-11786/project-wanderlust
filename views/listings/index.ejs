<% layout("/layouts/boilerplate") %>
<style>
  .filters {
    display: flex;
    flex-wrap: wrap;
    align-content: center;
    justify-content: center;
  }
  .filter {
    margin-right: 2rem;
    text-align: center;
    opacity: 0.7;
    margin-top: 0.5rem;
  }
  .filter:hover {
    opacity: 1;
    cursor: pointer;
  }

  .filter p {
    font-size: 0.9rem;
  }
  .toggle-tax {
    border: 1px solid black;
    padding: 0.4rem;
    padding-left: 1.2rem;
    padding-right: 1.2rem;
    border-radius: 1.25rem;
    height: 2.5rem;
    margin-left: 1.5rem;
    vertical-align: middle;
    margin-top: 0.7rem;
  }
  .tax-price {
    display: none;
  }
  @media (max-width: 450px) {
    .toggle-tax {
      display: none;
    }
  }

  @media (max-width: 365px) {
    .filters {
      display: none;
    }
  }
</style>
<body>
  <div class="filters">
    <div class="filter" id="Trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter" id="Bed Rooms">
      <div><i class="fa-solid fa-bed" onclick=""></i></div>
      <p>Bed Rooms</p>
    </div>
    <div class="filter" id="Pools" type="submit">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter" id="Boats">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </div>
    <div class="filter" id="Arctic">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>

    <div class="filter" id="Trending">
      <div><i class="fa-solid fa-fire"></i></div>
      <p>Trending</p>
    </div>
    <div class="filter" id="Bed Rooms">
      <div><i class="fa-solid fa-bed"></i></div>
      <p>Bed Rooms</p>
    </div>
    <div class="filter" id="Pools">
      <div><i class="fa-solid fa-person-swimming"></i></div>
      <p>Pools</p>
    </div>
    <div class="filter" id="Boats">
      <div><i class="fa-solid fa-ship"></i></div>
      <p>Boats</p>
    </div>
    <div class="filter" id="Arctic">
      <div><i class="fa-solid fa-snowflake"></i></div>
      <p>Arctic</p>
    </div>

    <div class="toggle-tax">
      <div class="form-check form-switch form-check-reverse">
        <input
          class="form-check-input"
          type="checkbox"
          id="flexSwitchCheckReverse"
        />
        <label
          id="switch-label"
          class="form-check-label"
          for="flexSwitchCheckReverse"
          >Display total after taxes</label
        >
      </div>
    </div>
  </div>
  <div class="row mt-2 row-cols-lg-3 row-cols-md-3 row-cols-sm-3 row-cols-sm-1">
    <% for(let listing of allListings){%>
    <a href="/listings/<%= listing._id %>" class="listing-link">
      <div class="card listing-card">
        <img
          src="<%=listing.image.url%>"
          class="card-img-top"
          alt="/listing-image"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title%></b> <br />
            &#8377; <%= listing.price.toLocaleString("en-IN"); %> /night
            <i class="tax-price">&nbsp;&nbsp;+18% GST</i>
          </p>
        </div>
      </div>
    </a>
    <%} %>
  </div>

  <script src="/js/filter.js"></script>
  <script>
    let taxSwitch = document.getElementById("flexSwitchCheckReverse");
    taxSwitch.addEventListener("click", () => {
      let taxPrice = document.getElementsByClassName("tax-price");
      for (let tax of taxPrice) {
        if (tax.style.display != "inline") {
          tax.style.display = "inline";
        } else {
          tax.style.display = "none";
        }
      }
    });
  </script>
</body>
